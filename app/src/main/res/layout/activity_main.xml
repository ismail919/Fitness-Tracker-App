<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Steps -->
    <TextView
        android:id="@+id/stepsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps: 0"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"/>

    <!-- Today's saved activity -->
    <TextView
        android:id="@+id/todayActivityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No activity saved for today"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/stepsText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="40dp" />

    <!-- Calories -->
    <TextView
        android:id="@+id/caloriesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories Burned: 0"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/todayActivityText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="40dp"/>

    <!-- Distance -->
    <TextView
        android:id="@+id/distanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance: 0.00 m"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/caloriesText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Maintenance Calories -->
    <TextView
        android:id="@+id/maintenanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maintenance: 0 kcal"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/distanceText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- XP + Level -->
    <TextView
        android:id="@+id/xpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XP: 0 | Level: 1"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/maintenanceText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Edit Profile Button -->
    <Button
        android:id="@+id/openProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/xpText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
